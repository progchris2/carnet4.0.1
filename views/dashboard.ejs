  <script>
    var moments = new moment();
    moments.locale('fr');
    var input = document.getElementsByClassName('episode');

    for (var i = 0; i < input.length; i++) {
        for (var i = 0; i < document.getElementsByClassName('episode-item').length; i++) {
          document.getElementsByClassName('episode-item')[i].textContent ="Mise à jour le : " + moment(input[i].value).format('L');
        }
    }
  </script>

